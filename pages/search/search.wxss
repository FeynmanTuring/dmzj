/* pages/search/search.wxss */

.search{
  
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  padding: 0 20rpx 10rpx 10rpx;
  
}

.search .input{
  width: 100%;
  border-style: solid;
  border-color: rgb(136, 128, 128);
  border-width: 1rpx;
}

.search .button{
  
  font-size: 30rpx;
  text-align: center;
}

.items{
  width: 97%;
  height: 100%;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
}

.item{
  padding: 20rpx 0;
  border-style: solid;
  border-color: rgb(136, 128, 128);
  border-width: 1rpx 0;
}

.item .ss{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items:stretch;
  
}
.item .title{
  color: green;
  font-size: 30rpx;
}

.item .author{
  font-size: 30rpx;
  
}

.grayLittleFont{
  font-size: 20rpx;
  color: gray;
}

.item .desc{
  padding: 40rpx 0;
}

.item .aa{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items:center;
  
}

.item .button{ 
  width: 100%;
  font-size: 25rpx;
  text-align: center;
}

.cc{
  height: 100%;
  display: flex;
  flex-direction: column-reverse;
  justify-content: center;
}
.tail{
  text-align: center;
  font-size: 25rpx;
  padding: 40rpx 0 0 0;
}